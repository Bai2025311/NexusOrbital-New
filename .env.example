# Server Configuration
PORT=3000
NODE_ENV=development
JWT_SECRET=your_jwt_secret_key

# Database Configuration (if needed in the future)
# MONGODB_URI=mongodb://localhost:27017/nexusorbital

# Alipay Configuration
ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_PRIVATE_KEY=your_alipay_private_key
ALIPAY_PUBLIC_KEY=your_alipay_public_key
ALIPAY_GATEWAY=https://openapi.alipay.com/gateway.do
ALIPAY_NOTIFY_URL=https://your-domain.com/api/payments/callback/alipay
ALIPAY_RETURN_URL=https://your-domain.com/payment/result

# WeChat Pay Configuration
WECHAT_APP_ID=your_wechat_app_id
WECHAT_MCH_ID=your_wechat_merchant_id
WECHAT_API_KEY=your_wechat_api_key
WECHAT_API_V3_KEY=your_wechat_api_v3_key
WECHAT_SERIAL_NO=your_wechat_serial_no
WECHAT_PRIVATE_KEY_PATH=path/to/your/wechat/private_key.pem
WECHAT_CERT_PATH=path/to/your/wechat/cert.pem
WECHAT_NOTIFY_URL=https://your-domain.com/api/payments/callback/wechat

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox # or 'live' for production
PAYPAL_RETURN_URL=https://your-domain.com/payment/success
PAYPAL_CANCEL_URL=https://your-domain.com/payment/cancel
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
